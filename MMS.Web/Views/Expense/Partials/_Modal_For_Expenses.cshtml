@model MMS.Entities.Dtos.Incomming.ExpenseDTO
<!-- Modal -->
<div class="modal fade" id="exampleModal13" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add New Expenses</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">


                <form asp-controller="Expense" asp-action="Create" method="post" class="border-1">
                    <div asp-validation-summary="All"></div>

                    <div class="mt-2 row">
                        <label asp-for="Title"></label>
                        <input placeholder="Title.." type="text" asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mt-2 row">
                        <label asp-for="Description"></label>
                        <textarea   asp-for="Description" class="form-control" ></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <input type="text" name="MonthId" hidden value="@Model.MonthId" />
                    <div class="mt-2 row">
                        <label asp-for="Amount"></label>
                        <input placeholder="Amount" type="number" asp-for="Amount" class="form-control"  />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    
                    <div class="row p-3">
                        <input type="submit" class="btn btn-success m-1" data-bs-dismiss="modal" style="width:150px"></input>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>
