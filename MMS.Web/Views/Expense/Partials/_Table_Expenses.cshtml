

<table class="table table-hover">

    <thead>
        <tr>
            <th>Title</th>
            <th>Descriptions</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in ViewBag.Expenses)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Amount</td>
                <td>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete","Expense",new{ExpenseId=item.Id})">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
